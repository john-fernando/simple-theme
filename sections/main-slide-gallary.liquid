<div class='gallery-container'>
    <div class='gallery'>
        {% for i in (1..2) %}
            {% for j in (1..8) %}
                {% assign image_var = 'gallery_image_' | append: j %}
                {% assign image = section.settings[image_var] %}
                {% if image %}
                    {{ image | image_url: width: null | image_tag: class: 'gallery' }}
                {% endif %}
            {% endfor %}
        {% endfor %}
    </div>
</div>

<style>
    /* ギャラリーの枠 */
    .gallery-container {
        overflow: hidden;
        position: relative;
        width: 100%;
        background-color: #f8f8f8;
        padding: 30px 0;
    }

    /* スライド全体（2セットの画像を含む） */
    .gallery {
        display: flex;
        gap: 10px;
        animation: scrollGallery 15s linear infinite;
    }

    /* 画像のサイズ */
    .gallery img {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border-radius: 8px;
    }

    /* スクロールのアニメーション */
    @keyframes scrollGallery {
        from {
            transform: translateX(0);
        }
        to {
            transform: translateX(-50%);
        }
    }
</style>

