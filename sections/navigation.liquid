<nav class='absolute top-0 left-0 w-full p-5 bg-amber-100'>
    <div class='container mx-auto flex items-center justify-between'>
        <!-- ロゴ（左側） -->
        <a href='/' class='text-2xl lg:text-3xl font-bold text-neutral-200'>MOGU Kyoto</a>

        <!-- ハンバーガーメニュー（モバイル時のみ表示） -->
        <input type='checkbox' id='menu-toggle' class='peer hidden'>
        <label for='menu-toggle' class='cursor-pointer text-neutral-200 text-3xl'>☰</label>

        <!-- オーバーレイ背景 -->
        <div
            class='fixed top-0 right-0 inset-0  bg-black/70 transform translate-x-full peer-checked:translate-x-0 transition-transform duration-500'
        ></div>

        <!-- スライドメニュー -->
        <div class='fixed top-0 right-0 h-full w-8/10 sm:w-4/10 lg:w-1/5 bg-white shadow-lg transform translate-x-full peer-checked:translate-x-0 transition-transform duration-500'>
            <div class='p-6'>
                <!-- 閉じるボタン -->
                <label for='menu-toggle' class='cursor-pointer text-gray-700 text-3xl block text-right'>×</label>

                <!-- メニューリスト -->
                <ul class='mt-8 space-y-4'>
                    {% for link in linklists['main-menu'].links %}
                        <li>
                            <a href='{{ link.url }}' class='text-gray-700 hover:text-gray-900 block text-lg p-1'>
                                {{ link.title }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
</nav>

